<div class="user-card">
    <div class="user-img">
     <%= link_to user_path(user.id) do %>
        <img src=<%= user.photo %> alt="Profile picture of <%= user.name %>" />
    <% end %>
    </div>

    <div class="user-info">
        <h3 class="user-text"><%= user.name %></h3>
        <p class="user-text-post">Number of Posts: <%= user.posts_counter%> </p>
    </div>
</div>